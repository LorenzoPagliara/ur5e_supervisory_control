<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="generic_mounting">
  <xacro:arg name="height" default="0.05"/>
  <xacro:arg name="radius" default="0.1"/>
  <link name="world"/>

  <xacro:include filename="$(find acg_resources_generic_mounting_description)/urdf/generic_mounting.urdf.xacro"/>
  <xacro:build_mounting mounting_link="world" config="${dict(height=$(arg height), radius=$(arg radius), mass=0.0)}"/>
</robot>
